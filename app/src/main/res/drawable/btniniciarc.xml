<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF6200EE" /> <!-- Color de fondo cuando se presiona -->
            <corners android:radius="12dp" /> <!-- Bordes redondeados -->
            <stroke android:width="2dp" android:color="#FFFFFF" /> <!-- Borde blanco -->
        </shape>
    </item>
    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0E69C1" /> <!-- Color de fondo normal -->
            <corners android:radius="12dp" /> <!-- Bordes redondeados -->
            <stroke android:width="2dp" android:color="#FFFFFF" /> <!-- Borde blanco -->
        </shape>
    </item>
</selector>