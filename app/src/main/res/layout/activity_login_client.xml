<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginClientActivity"
    android:background="@drawable/file3">

    <!-- Botón Volver -->

    <!-- Botón Iniciar Sesión -->

    <Button
        android:id="@+id/btnVolverC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="50dp"
        android:text="Volver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnIniciarSesionC"
        android:layout_width="166dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/btniniciarc"
        android:text="Iniciar Sesion"
        app:layout_constraintBottom_toTopOf="@+id/registerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPasswordC"
        tools:ignore="MissingConstraints" />

    <!-- Campo Email -->
    <EditText
        android:id="@+id/editTextEmailC"
        android:layout_width="257dp"
        android:layout_height="54dp"
        android:layout_marginTop="332dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingStart="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVolverC"
        tools:ignore="MissingConstraints" />

    <!-- Botón de Registro -->
    <Button
        android:id="@+id/registerButton"
        android:layout_width="133dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btnregistrarc"
        android:text="Registrarse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnIniciarSesionC"
        tools:ignore="MissingConstraints" />

    <!-- Campo Contraseña -->
    <EditText
        android:id="@+id/editTextPasswordC"
        android:layout_width="257dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Contraseña"
        android:paddingStart="16dp"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmailC"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>